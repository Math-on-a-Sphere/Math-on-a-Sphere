colorline = function [steps] {
  newcolor = 0
  repeat steps {
    set color newcolor
    forward 1
    newcolor = newcolor + 1
  }
}

hemi = function [angle] {
  cheading = 0
  repeat (360/5) {
    sp [angle,0] sh [cheading]
    colorline 90
    cheading = cheading + 5
  }
}

setspeed (PI*6)
hemi 0
hemi 180

